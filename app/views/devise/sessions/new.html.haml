%section#jobs
  .row
    .large-12.columns
      %h1
        Log in
  .row
    .large-8.columns
      .row.collapse
        = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .form-inputs
            = f.input :email, required: false, autofocus: true, placeholder: 'Enter your email', label: false
            = f.input :password, required: false, placeholder: 'Password', label: false 
            = f.input :remember_me, :class => "remember-me", as: :boolean if devise_mapping.rememberable?
          .form-actions
            = f.button :submit, "Log in", :class => "a button left"
      = link_to "Forgot your password?", new_password_path(resource_name)

  
